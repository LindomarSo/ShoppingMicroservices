@model GeekShopping.Web.Models.ProductViewModel

<form asp-action="ProductDelete">
    <input asp-for="Id" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar Produto</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2 list-label" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Name" class="form-control" />
            </div>

            <div class="col-2 pb-3">
                <label asp-for="CategoryName" class="control-label pt-2 list-label" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CategoryName" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2 list-label" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled rows="5" style="resize: none;" asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2 list-label" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Price" type="number" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2 list-label" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control"> Voltar para lista</a>
            </div>

            <div class="col-5 pl-3">
                <input type="submit" value="Excluir produto" class="btn-danger btn form-control"> 
            </div>
        </div>
    </div>
</form>
