@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de produtos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fa-solid fa-circle-plus"></i> Criar novo produto
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fa-regular fa-trash-can"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>